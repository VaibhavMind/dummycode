<!-- 	</aop:config> -->

	<aop:config>
		<aop:pointcut id="daoOperation" expression="bean(*DAO)" />
		<aop:advisor pointcut-ref="daoOperation" advice-ref="daoExceptionAdvice" />
		<aop:advisor pointcut-ref="daoOperation" advice-ref="performanceInterceptor" />
	</aop:config>

</beans>
